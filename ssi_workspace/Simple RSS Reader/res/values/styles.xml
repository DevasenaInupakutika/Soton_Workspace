<resources>

    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Light"/>

    
    <style name="CustomTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
               <item name="android:windowBackground">@color/ssicolor</item>
               <item name="android:colorBackground">#D2232A</item>
            </style>
            
    <style name="MainActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/ssicolor</item>
        <item name="android:colorBackground">#D2232A</item>
        <item name="android:actionBarStyle">@style/WindowTitleBgMain</item>
       </style>  
     
    <style name="WindowTitleBgMain" parent="@android:style/Widget.Holo.Light.ActionBar"> 
           <item name="android:background">@color/ssicolor</item>
           <item name="android:textColor">#fff</item>
           <item name="android:titleTextStyle">@style/SSITextAppearance</item>
           <item name="android:gravity">center</item>
       </style> 
 		
    
    <style name="WindowTitleBackground" parent="@android:style/Widget.Holo.Light.ActionBar"> 
           <item name="android:background">@color/ssicolor</item>
           <item name="android:textColor">#fff</item>
           <item name="android:titleTextStyle">@style/SSITextAppearance</item>
           <item name="android:gravity">center</item>
       </style> 
 		
 	<style name="ListTheme" parent="@android:style/Theme.Holo.Light"> 
    		<item name="android:actionBarStyle">@style/WindowTitleBackground</item>
    	</style>
    	
 	<style name="SSITextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
 	    <item name="android:textColor">#ffffff</item>
 	    <item name="android:gravity">center</item>
    </style> 		
    
</resources>